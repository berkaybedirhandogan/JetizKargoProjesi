@model KargoTakibi.Models.Kullanici

@{
    ViewData["Title"] = "Profilim";
}

<div class="row justify-center" style="min-height: 80vh; align-items: center;">
    <div class="col-lg-4 col-md-6 col-11">
        <div class="card-glass" style="border-radius: 2rem; border: 1px solid rgba(255,255,255,0.08); padding: 2.5rem 2rem;">
            <h2 class="text-center mb-4" style="font-weight: 800;">Profil Bilgileri</h2>
            
            @if (ViewBag.Message != null)
            {
                <div class="badge badge-success mb-4" style="width: 100%; padding: 1rem; display: block;">
                    <i class="bi bi-check-circle-fill"></i> @ViewBag.Message
                </div>
            }

            <form asp-action="Profil" method="post">
                <div class="form-group">
                    <label asp-for="AdSoyad" class="form-label">Ad Soyad</label>
                    <div class="input-wrap">
                        <input asp-for="AdSoyad" class="form-control" />
                        <i class="bi bi-person"></i>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label">E-posta</label>
                    <div class="input-wrap">
                        <input asp-for="Email" class="form-control" />
                        <i class="bi bi-envelope"></i>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Yeni Şifre (Boş bırakırsanız değişmez)</label>
                    <div class="input-wrap" style="position: relative;">
                        <input name="Sifre" type="password" id="sifreInput" class="form-control" placeholder="******" style="padding-right: 3rem;" />
                        <button type="button" onclick="togglePassword('sifreInput', this)" style="position: absolute; right: 0; top: 0; height: 100%; width: 3rem; background: none; border: none; color: var(--text-muted); cursor: pointer; display: flex; align-items: center; justify-content: center; z-index: 10;">
                            <i class="bi bi-eye" style="position: static !important; transform: none !important; pointer-events: none;"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Sifre" class="text-danger" style="font-size: 0.8rem; margin-top: 0.4rem; display: block;"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 mt-4">
                    GÜNCELLE
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword(inputId, btn) {
            var input = document.getElementById(inputId);
            var icon = btn.querySelector('i');
            if (input.type === 'password') {
                input.type = 'text';
                icon.className = 'bi bi-eye-slash';
            } else {
                input.type = 'password';
                icon.className = 'bi bi-eye';
            }
        }
    </script>
}
