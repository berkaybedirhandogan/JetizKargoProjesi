<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jetiz</title>
    <link rel="icon" type="image/x-icon" href="~/img/logo.ico" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/animations.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar">
        <div class="navbar-inner container-fluid">
            <a class="nav-brand" asp-controller="Home" asp-action="Index">
                <span class="brand-text"><span class="brand-je">Je</span><span class="brand-tiz">tiz</span></span>
            </a>
            
            <div class="nav-menu">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" 
                       asp-controller="Home" asp-action="Index">ANA SAYFA</a>

                    <a class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Kargo" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" 
                       asp-controller="Kargo" asp-action="Index">PANEL</a>
                    
                    <a class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Kargo" && ViewContext.RouteData.Values["Action"]?.ToString() == "Ekle" ? "active" : "")" 
                       asp-controller="Kargo" asp-action="Ekle">YENİ KAYIT</a>
                    
                    <a class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Hareket" ? "active" : "")" 
                       asp-controller="Hareket" asp-action="HareketListesi">GEÇMİŞ</a>
                    
                    <div class="user-pill">
                        <a asp-controller="Hesap" asp-action="Profil" style="font-weight: 800; color: var(--text-main); display: flex; align-items: center; gap: 0.5rem;">
                            <i class="bi bi-person-circle"></i> @User.Identity?.Name?.ToUpper()
                        </a>
                        <form asp-controller="Hesap" asp-action="Cikis" method="post" style="display:inline; margin-left: 0.5rem; border-left: 1px solid var(--border); padding-left: 0.75rem;">
                             <button type="submit" style="background:none; border:none; color:var(--primary); cursor:pointer; font-weight:800; font-size: 0.75rem; padding:0;">
                                ÇIKIŞ
                             </button>
                        </form>
                    </div>
                }
                else
                {
                    <a class="nav-item" asp-controller="Home" asp-action="Index">ANA SAYFA</a>
                    <a class="nav-item" asp-controller="Hesap" asp-action="Giris">GİRİŞ</a>
                    <a class="btn btn-primary btn-sm" asp-controller="Hesap" asp-action="Kayit">HEMEN KATIL</a>
                }
            </div>
        </div>
    </nav>

    <main style="flex: 1; padding-top: 100px; padding-bottom: 3rem;">
        <div class="container-responsive">

            @RenderBody()
        </div>
    </main>

    <footer style="background: var(--bg-surface); border-top: 1px solid var(--border); margin-top: 4rem; padding: 3rem 0;">
        <div class="container-responsive">
            <div class="footer-grid">
                <div>
                    <div class="brand-text mb-2" style="font-size: 1.5rem;">
                        <span class="brand-je">Je</span><span class="brand-tiz">tiz</span>
                    </div>
                    <p style="font-size: 0.9rem; max-width: 280px; color: var(--text-secondary); margin-bottom: 1.25rem;">
                        Geleceğin lojistik altyapısı ile kargolarınız ışık hızında ve güvenle hedefine ulaşır.
                    </p>
                    <div style="display: flex; gap: 0.5rem;">
                        <span class="btn btn-sm btn-outline" style="border-radius: 50%; width: 32px; height: 32px; padding: 0; display:flex; align-items:center; justify-content:center; pointer-events: none; opacity: 0.6;"><i class="bi bi-twitter-x"></i></span>
                        <span class="btn btn-sm btn-outline" style="border-radius: 50%; width: 32px; height: 32px; padding: 0; display:flex; align-items:center; justify-content:center; pointer-events: none; opacity: 0.6;"><i class="bi bi-instagram"></i></span>
                        <span class="btn btn-sm btn-outline" style="border-radius: 50%; width: 32px; height: 32px; padding: 0; display:flex; align-items:center; justify-content:center; pointer-events: none; opacity: 0.6;"><i class="bi bi-linkedin"></i></span>
                    </div>
                </div>
                
                <div>
                    <h5 style="color: white; margin-bottom: 1rem; font-size: 0.95rem;">Platform</h5>
                    <ul style="display: flex; flex-direction: column; gap: 0.6rem; font-size: 0.85rem; color: var(--text-secondary);">
                        <li><a asp-controller="Home" asp-action="Hakkimizda">Hakkımızda</a></li>
                        <li><a asp-controller="Home" asp-action="Hizmetler">Hizmetler</a></li>
                        <li><a asp-controller="Home" asp-action="Fiyatlar">Fiyatlar</a></li>
                        <li><a asp-controller="Home" asp-action="Kariyer">Kariyer</a></li>
                    </ul>
                </div>
                
                <div>
                    <h5 style="color: white; margin-bottom: 1rem; font-size: 0.95rem;">Destek</h5>
                    <ul style="display: flex; flex-direction: column; gap: 0.6rem; font-size: 0.85rem; color: var(--text-secondary);">
                        <li><a asp-controller="Home" asp-action="Yardim">Yardım Merkezi</a></li>
                        <li><a asp-controller="Home" asp-action="Iletisim">Bize Ulaşın</a></li>
                        <li><a asp-controller="Home" asp-action="Yasal">Yasal</a></li>
                        <li><a asp-controller="Home" asp-action="Gizlilik">Gizlilik</a></li>
                    </ul>
                </div>
            </div>
            
            <div style="border-top: 1px solid var(--border); margin-top: 2rem; padding-top: 1.25rem; display: flex; justify-content: space-between; align-items: center; color: var(--text-muted); font-size: 0.8rem; flex-wrap: wrap; gap: 1rem;">
                <div>© 2026 Jetiz Lojistik A.Ş.</div>
                <div>İstanbul, TR</div>
            </div>
        </div>
    </footer>

    <!-- Custom Confirm Modal -->
    <div id="confirmModal" class="confirm-modal-overlay">
        <div class="confirm-modal">
            <div id="confirmModalIcon" class="confirm-modal-icon danger">
                <i class="bi bi-exclamation-triangle-fill"></i>
            </div>
            <h3 id="confirmModalTitle">Emin misiniz?</h3>
            <p id="confirmModalMessage">Bu işlem geri alınamaz.</p>
            <div class="confirm-modal-actions">
                <button type="button" class="btn btn-secondary" onclick="closeConfirmModal()">Vazgeç</button>
                <button type="button" id="confirmModalAction" class="btn btn-danger">Evet, Sil</button>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/turkey_data.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        window.addEventListener('pageshow', function(event) {
            if (event.persisted) {
                window.location.reload();
            }
        });

        // Custom Confirm Modal Functions
        let confirmCallback = null;

        function showConfirmModal(options) {
            const modal = document.getElementById('confirmModal');
            const icon = document.getElementById('confirmModalIcon');
            const title = document.getElementById('confirmModalTitle');
            const message = document.getElementById('confirmModalMessage');
            const actionBtn = document.getElementById('confirmModalAction');

            title.textContent = options.title || 'Emin misiniz?';
            message.textContent = options.message || 'Bu işlem geri alınamaz.';
            actionBtn.textContent = options.confirmText || 'Evet';
            actionBtn.className = 'btn ' + (options.btnClass || 'btn-danger');
            
            icon.className = 'confirm-modal-icon ' + (options.iconClass || 'danger');
            icon.innerHTML = '<i class="bi ' + (options.icon || 'bi-exclamation-triangle-fill') + '"></i>';

            confirmCallback = options.onConfirm;
            modal.classList.add('active');
        }

        function closeConfirmModal() {
            document.getElementById('confirmModal').classList.remove('active');
            confirmCallback = null;
        }

        document.getElementById('confirmModalAction').addEventListener('click', function() {
            if (confirmCallback) {
                confirmCallback();
            }
            closeConfirmModal();
        });

        // Override for forms with data-confirm attribute
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('form[data-confirm]').forEach(function(form) {
                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    const formRef = this;
                    showConfirmModal({
                        title: formRef.dataset.confirmTitle || 'Silmek istediğinize emin misiniz?',
                        message: formRef.dataset.confirmMessage || 'Bu işlem geri alınamaz.',
                        confirmText: formRef.dataset.confirmBtn || 'Evet, Sil',
                        icon: formRef.dataset.confirmIcon || 'bi-trash3',
                        iconClass: 'danger',
                        btnClass: 'btn-danger',
                        onConfirm: function() {
                            formRef.submit();
                        }
                    });
                });
            });
        });

        // Browser back button function with animation support
        function goBack() {
            if (document.referrer && document.referrer.indexOf(window.location.host) !== -1) {
                window.location.href = document.referrer;
            } else {
                window.location.href = '/';
            }
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>