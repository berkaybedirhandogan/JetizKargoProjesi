@model ErrorViewModel
@{
    ViewData["Title"] = "Hata";
}

<div class="row justify-center" style="min-height: 70vh; align-items: center;">
    <div class="col-lg-6">
        <div class="card-glass text-center" style="border: 1px solid rgba(239, 68, 68, 0.3);">
            <div style="width: 80px; height: 80px; margin: 0 auto 1.5rem auto; background: rgba(239, 68, 68, 0.1); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: var(--danger);">
                <i class="bi bi-exclamation-triangle-fill" style="font-size: 2.5rem;"></i>
            </div>
            
            <h1 class="text-danger" style="font-size: 2rem; margin-bottom: 1rem;">Bir Hata Oluþtu</h1>
            <p style="font-size: 1.1rem; color: var(--text-secondary); margin-bottom: 2rem;">
                Ýsteðiniz iþlenirken beklenmedik bir sorun meydana geldi.
            </p>

            @if (Model.ShowRequestId)
            {
                <div style="background: rgba(0,0,0,0.2); padding: 1rem; border-radius: var(--radius-md); margin-bottom: 2rem; font-family: monospace;">
                    <strong>Request ID:</strong> <span style="color: var(--primary);">@Model.RequestId</span>
                </div>
            }

            <div style="display: flex; justify-content: center; gap: 1rem;">
                <a href="/" class="btn btn-primary">
                    <i class="bi bi-house-door"></i> Ana Sayfaya Dön
                </a>
                <button onclick="window.history.back()" class="btn btn-outline">
                    <i class="bi bi-arrow-left"></i> Geri Git
                </button>
            </div>
        </div>
    </div>
</div>
