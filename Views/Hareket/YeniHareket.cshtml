@model KargoTakibi.Models.Hareket

@{
    ViewData["Title"] = "Durum Güncelle";
}

<div class="form-page-container" style="max-width: 600px;">



    <div class="card-glass" style="border-top: 4px solid var(--primary);">
        <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 2rem;">
            <div style="width: 48px; height: 48px; background: rgba(225, 29, 72, 0.1); border-radius: var(--radius-md); display: flex; align-items: center; justify-content: center; color: var(--primary);">
                <i class="bi bi-patch-plus-fill" style="font-size: 1.5rem;"></i>
            </div>
            <div>
                <h2 style="margin: 0; font-size: 1.35rem;">Durum Güncelle</h2>
                <p style="margin: 0; font-size: 0.85rem; color: var(--text-secondary);">Kargo #@ViewBag.KargoID için yeni hareket kaydı</p>
            </div>
        </div>

        <form asp-action="YeniHareket" method="post">
            <input type="hidden" asp-for="KargoID" />
            
            <div class="form-group">
                <label class="form-label">Kargo Durumu Seçin</label>
                <div class="status-grid">
                    <label class="status-card">
                        <input type="radio" asp-for="Durum" value="Hazırlanıyor" />
                        <div class="status-content">
                            <i class="bi bi-box-seam"></i>
                            <span>Hazırlanıyor</span>
                        </div>
                    </label>
                    
                    <label class="status-card">
                        <input type="radio" asp-for="Durum" value="Yolda" />
                        <div class="status-content">
                            <i class="bi bi-truck"></i>
                            <span>Yolda</span>
                        </div>
                    </label>
                    
                    <label class="status-card">
                        <input type="radio" asp-for="Durum" value="Aktarma Merkezinde" />
                        <div class="status-content">
                            <i class="bi bi-building"></i>
                            <span>Aktarma Merkezi</span>
                        </div>
                    </label>
                    
                    <label class="status-card">
                        <input type="radio" asp-for="Durum" value="Dağıtımda" />
                        <div class="status-content">
                            <i class="bi bi-geo-alt"></i>
                            <span>Dağıtımda</span>
                        </div>
                    </label>
                    
                    <label class="status-card">
                        <input type="radio" asp-for="Durum" value="Teslim Edildi" />
                        <div class="status-content">
                            <i class="bi bi-check-circle"></i>
                            <span>Teslim Edildi</span>
                        </div>
                    </label>
                    
                    <label class="status-card">
                        <input type="radio" asp-for="Durum" value="İptal Edildi" />
                        <div class="status-content">
                            <i class="bi bi-x-circle"></i>
                            <span>İptal Edildi</span>
                        </div>
                    </label>
                </div>
                <span asp-validation-for="Durum" class="text-danger" style="font-size: 0.8rem; margin-top: 0.4rem; display: block;"></span>
            </div>

            <div class="form-group">
                <label class="form-label">İşlem Tarihi</label>
                <div class="input-wrap">
                    <input asp-for="Tarih" type="datetime-local" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                    <i class="bi bi-calendar-event"></i>
                </div>
            </div>

            <div class="form-actions" style="margin-top: 1.5rem;">
                <a asp-controller="Kargo" asp-action="Detay" asp-route-id="@ViewBag.KargoID" class="btn btn-secondary">Vazgeç</a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save-check"></i> Kaydet
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
