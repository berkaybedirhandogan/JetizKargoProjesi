@model IEnumerable<KargoTakibi.Models.Hareket>

@{
    ViewData["Title"] = "Tüm Hareket Geçmişi";
}

<div class="form-page-container" style="max-width: 1200px;">



    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; flex-wrap: wrap; gap: 1rem;">
        <div>
            <h1 style="font-size: 1.85rem; margin-bottom: 0.25rem;">Hareket Geçmişi</h1>
            <p style="margin: 0; color: var(--text-secondary); font-size: 0.9rem;">Sistemdeki tüm kargo durum güncellemeleri.</p>
        </div>
        <div style="width: 280px;" class="input-wrap">
            <input type="text" id="hareketSearch" class="form-control" placeholder="ID veya Durum ara..." style="padding: 0.6rem 2.25rem 0.6rem 1rem; font-size: 0.85rem;" />
            <i class="bi bi-filter-right" style="right: 1rem;"></i>
        </div>
    </div>

    <div class="card-glass" style="padding: 0; overflow: hidden;">
        <div class="table-container" style="border: none; border-radius: 0;">
            <table class="table" id="hareketTable">
                <thead>
                    <tr>
                        <th>Hareket No</th>
                        <th>Kargo No</th>
                        <th><i class="bi bi-clock"></i> İşlem Tarihi</th>
                        <th><i class="bi bi-info-square"></i> Güncel Durum</th>
                        <th style="text-align: right;">Gönderici → Alıcı</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderByDescending(h => h.Tarih))
                    {
                        <tr>
                            <td style="font-family: monospace; color: var(--text-muted); font-size: 0.85rem;">#H-@item.HareketID.ToString("D4")</td>
                            <td>
                                <a asp-controller="Kargo" asp-action="Detay" asp-route-id="@item.KargoID" style="color: var(--primary); font-weight: 700; font-size: 0.9rem;">
                                    #K-@item.KargoID.ToString("D6")
                                </a>
                            </td>
                            <td>
                                <div style="font-weight: 600; font-size: 0.85rem;">@item.Tarih.ToString("dd.MM.yyyy HH:mm")</div>
                            </td>
                            <td>
                                @if (item.Durum == "Teslim Edildi")
                                {
                                    <span class="badge badge-success" style="font-size: 0.7rem;"><i class="bi bi-check2-circle"></i> @item.Durum</span>
                                }
                                else if (item.Durum == "Yolda" || item.Durum == "Dağıtımda")
                                {
                                    <span class="badge badge-info" style="font-size: 0.7rem;"><i class="bi bi-truck"></i> @item.Durum</span>
                                }
                                else if (item.Durum == "İptal Edildi")
                                {
                                    <span class="badge badge-danger" style="font-size: 0.7rem;"><i class="bi bi-slash-circle"></i> @item.Durum</span>
                                }
                                else
                                {
                                    <span class="badge badge-warning" style="font-size: 0.7rem;"><i class="bi bi-box"></i> @item.Durum</span>
                                }
                            </td>
                            <td style="text-align: right; font-size: 0.8rem;">
                                @if (item.Kargo != null)
                                {
                                    <span style="color: var(--text-secondary);">@item.Kargo.GondericiAd</span>
                                    <i class="bi bi-arrow-right" style="margin: 0 0.35rem; color: var(--primary); font-size: 0.7rem;"></i>
                                    <span style="color: var(--text-main); font-weight: 600;">@item.Kargo.AliciAd</span>
                                }
                                else
                                {
                                    <span style="color: var(--text-muted);">Bilinmeyen Gönderi</span>
                                }
                            </td>
                        </tr>
                    }
                    
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" style="padding: 3rem; text-align: center;">
                                <i class="bi bi-clock-history" style="font-size: 2.5rem; color: var(--border); display: block; margin-bottom: 1rem;"></i>
                                <div style="color: var(--text-secondary); font-weight: 600;">Hareket kaydı bulunamadı.</div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $("#hareketSearch").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#hareketTable tbody tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}
