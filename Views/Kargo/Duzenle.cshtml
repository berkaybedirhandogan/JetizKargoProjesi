@model KargoTakibi.Models.Kargo

@{
    ViewData["Title"] = "Gönderiyi Düzenle";
}

<div class="form-page-container">
    <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 2rem; flex-wrap: wrap; gap: 1rem;">
        <div>
            <h1 style="font-size: 2rem; font-weight: 800; margin: 0;">Gönderiyi Güncelle</h1>
        </div>
        <div>
            <span class="badge badge-info">#@(Model.TakipNo ?? "YENI")</span>
        </div>
    </div>

    <form asp-action="Duzenle" id="kargoForm">
        <input type="hidden" asp-for="KargoID" />
        <input type="hidden" asp-for="KullaniciID" />
        <input type="hidden" asp-for="Durum" />
        <input type="hidden" asp-for="TakipNo" />

        <div asp-validation-summary="ModelOnly" class="badge badge-danger w-100 mb-4" style="padding: 0.75rem 1rem; border-radius: var(--radius-md); text-align: left; justify-content: start;"></div>
        
        <div class="form-grid">
            <div class="card-glass" style="border-top: 3px solid var(--primary);">
                <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1.5rem;">
                    <div style="width: 44px; height: 44px; background: rgba(225, 29, 72, 0.1); border-radius: var(--radius-md); display: flex; align-items: center; justify-content: center; color: var(--primary);">
                        <i class="bi bi-box-arrow-up" style="font-size: 1.25rem;"></i>
                    </div>
                    <h3 style="margin: 0; font-size: 1.25rem;">Gönderici Bilgileri</h3>
                </div>

                <div class="form-group">
                    <label asp-for="GondericiAd" class="form-label">Ad Soyad / Firma</label>
                    <div class="input-wrap">
                        <input asp-for="GondericiAd" class="form-control" />
                        <i class="bi bi-person"></i>
                    </div>
                </div>

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                    <div class="form-group">
                        <label asp-for="GondericiIl" class="form-label">İl</label>
                        <div class="input-wrap">
                            <select asp-for="GondericiIl" class="form-control" id="gondericiIl" style="appearance: none; padding-right: 2.5rem;">
                                <option value="">İl Seçiniz</option>
                            </select>
                            <i class="bi bi-chevron-down"></i>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="GondericiIlce" class="form-label">İlçe</label>
                        <div class="input-wrap">
                            <select asp-for="GondericiIlce" class="form-control" id="gondericiIlce" style="appearance: none; padding-right: 2.5rem;">
                                <option value="">Önce İl Seçin</option>
                            </select>
                            <i class="bi bi-chevron-down"></i>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="GondericiTelefonu" class="form-label">Telefon</label>
                    <div class="input-wrap">
                        <input asp-for="GondericiTelefonu" class="form-control phone-mask" />
                        <i class="bi bi-telephone"></i>
                    </div>
                </div>

                <div class="form-group" style="margin-bottom: 0;">
                    <label asp-for="GondericiAdresi" class="form-label">Açık Adres</label>
                    <textarea asp-for="GondericiAdresi" class="form-control" style="min-height: 80px; padding: 0.75rem;"></textarea>
                </div>
            </div>

            <div class="card-glass" style="border-top: 3px solid var(--primary);">
                <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1.5rem;">
                    <div style="width: 44px; height: 44px; background: rgba(255, 255, 255, 0.05); border-radius: var(--radius-md); display: flex; align-items: center; justify-content: center; color: var(--text-main);">
                        <i class="bi bi-box-arrow-in-down" style="font-size: 1.25rem;"></i>
                    </div>
                    <h3 style="margin: 0; font-size: 1.25rem;">Alıcı Bilgileri</h3>
                </div>

                <div class="form-group">
                    <label asp-for="AliciAd" class="form-label">Ad Soyad / Firma</label>
                    <div class="input-wrap">
                        <input asp-for="AliciAd" class="form-control" />
                        <i class="bi bi-person"></i>
                    </div>
                </div>

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                    <div class="form-group">
                        <label asp-for="AliciIl" class="form-label">İl</label>
                        <div class="input-wrap">
                            <select asp-for="AliciIl" class="form-control" id="aliciIl" style="appearance: none; padding-right: 2.5rem;">
                                <option value="">İl Seçiniz</option>
                            </select>
                            <i class="bi bi-chevron-down"></i>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="AliciIlce" class="form-label">İlçe</label>
                        <div class="input-wrap">
                            <select asp-for="AliciIlce" class="form-control" id="aliciIlce" style="appearance: none; padding-right: 2.5rem;">
                                <option value="">Önce İl Seçin</option>
                            </select>
                            <i class="bi bi-chevron-down"></i>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="AliciTelefonu" class="form-label">Telefon</label>
                    <div class="input-wrap">
                        <input asp-for="AliciTelefonu" class="form-control phone-mask" />
                        <i class="bi bi-telephone"></i>
                    </div>
                </div>

                <div class="form-group" style="margin-bottom: 0;">
                    <label asp-for="AliciAdresi" class="form-label">Açık Adres</label>
                    <textarea asp-for="AliciAdresi" class="form-control" style="min-height: 80px; padding: 0.75rem;"></textarea>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save-check"></i> Değişiklikleri Kaydet
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            const currentGondericiIl = "@Html.Raw(Model.GondericiIl)";
            const currentGondericiIlce = "@Html.Raw(Model.GondericiIlce)";
            const currentAliciIl = "@Html.Raw(Model.AliciIl)";
            const currentAliciIlce = "@Html.Raw(Model.AliciIlce)";

            const ilSelects = $('#gondericiIl, #aliciIl');
            Object.keys(TURKEY_DATA).forEach(city => {
                ilSelects.append(`<option value="${city}">${city}</option>`);
            });

            if(currentGondericiIl) {
                $('#gondericiIl').val(currentGondericiIl);
                updateIlce('#gondericiIl', '#gondericiIlce', currentGondericiIlce);
            }
            if(currentAliciIl) {
                $('#aliciIl').val(currentAliciIl);
                updateIlce('#aliciIl', '#aliciIlce', currentAliciIlce);
            }

            function updateIlce(ilSelectId, ilceSelectId, activeIlce = "") {
                const il = $(ilSelectId).val();
                const ilceSelect = $(ilceSelectId);
                ilceSelect.empty().append('<option value="">İlçe Seçiniz</option>');
                if (il && TURKEY_DATA[il]) {
                    TURKEY_DATA[il].forEach(ilce => {
                        const selected = ilce === activeIlce ? 'selected' : '';
                        ilceSelect.append(`<option value="${ilce}" ${selected}>${ilce}</option>`);
                    });
                }
            }

            $('#gondericiIl').change(function() { updateIlce('#gondericiIl', '#gondericiIlce'); });
            $('#aliciIl').change(function() { updateIlce('#aliciIl', '#aliciIlce'); });

            $('.phone-mask').on('input', function(e) {
                let x = e.target.value.replace(/\D/g, '').match(/(\d{0,1})(\d{0,3})(\d{0,3})(\d{0,2})(\d{0,2})/);
                if (!x[2]) {
                    e.target.value = x[1] === '0' ? '0' : (x[1] ? '0 (' + x[1] : '');
                } else {
                    e.target.value = x[1] + ' (' + x[2] + (x[3] ? ') ' + x[3] : '') + (x[4] ? ' ' + x[4] : '') + (x[5] ? ' ' + x[5] : '');
                }
            });
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
